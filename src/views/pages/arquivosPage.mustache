{{>partials/header}}

<h2>Arquivos do Processo</h2>

<div class="action-buttons">
    <a href="/uploadarquivo/{{processo.id}}">
        <button>Fazer Upload</button>
    </a>
</div>

{{#showArquivos}}
<ul class="arquivos-list">
{{#arquivos}}
    <li>
        <a href="/{{caminho}}" target="_blank">{{nome_original}}</a> 
        <a href="/arquivodelete/{{id}}">
            <button type="submit" class="btn-danger">Deletar</button>
        </a>
    </li>
{{/arquivos}}
</ul>
{{/showArquivos}}

{{^showArquivos}}
<p>Nenhum arquivo encontrado.</p>
{{/showArquivos}}

<div class="action-buttons">
    <a href="/cliente/{{processo.id}}">
        <button type="submit" class="btn-secondary">Voltar</button>
    </a>
</div>

{{>partials/footer}}