{{>partials/header}}

<h2>Adicionar Cliente</h2>

<fieldset>
    <form method="POST" action="/novocliente">
        <label for="nome_completo">Nome Completo:</label>
    <input type="text" id="nome_completo" name="nome_completo" required>

    <label for="data_nascimento">Data de Nascimento:</label>
    <input type="date" id="data_nascimento" name="data_nascimento">

    <label for="estado_civil">Estado Civil:</label>
    <input type="text" id="estado_civil" name="estado_civil">

    <label for="naturalidade">Naturalidade:</label>
    <input type="text" id="naturalidade" name="naturalidade">

    <label for="cpf">CPF:</label>
    <input type="text" id="cpf" name="cpf">

    <label for="rg">RG:</label>
    <input type="text" id="rg" name="rg">

    <label for="telefone_contato">Telefone de Contato:</label>
    <input type="tel" id="telefone_contato" name="telefone_contato">

    <label for="endereco_residencial">Endereço Residencial Completo:</label>
    <textarea id="endereco_residencial" name="endereco_residencial"></textarea>

    <label for="email">E-mail:</label>
    <input type="email" id="email" name="email">

    <label for="profissao">Profissão:</label>
    <input type="text" id="profissao" name="profissao">

    <label for="nome_conjuge">Nome do Companheiro/Cônjuge:</label>
    <input type="text" id="nome_conjuge" name="nome_conjuge">

    <label for="profissao_conjuge">Profissão do Cônjuge:</label>
    <input type="text" id="profissao_conjuge" name="profissao_conjuge">

    <label for="numero_filhos">Número de Filhos:</label>
    <input type="number" id="numero_filhos" name="numero_filhos">

    <label for="idade_filhos">Idade dos Filhos:</label>
    <input type="text" id="idade_filhos" name="idade_filhos">

    <label for="empresa_trabalho">Empresa ou Local de Trabalho:</label>
    <input type="text" id="empresa_trabalho" name="empresa_trabalho">

    <label for="endereco_comercial">Endereço Comercial:</label>
    <textarea id="endereco_comercial" name="endereco_comercial"></textarea>

    <label for="telefone_comercial">Telefone de Contato (Comercial):</label>
    <input type="tel" id="telefone_comercial" name="telefone_comercial">

    
    <label for="honorarios">Honorários:</label>
    <input type="number" id="honorarios" name="honorarios" step="0.01">

    <label for="data_pagamento">Data do Pagamento:</label>
    <input type="date" id="data_pagamento" name="data_pagamento">

    <label for="plano_pagamento">Plano de Pagamento:</label>
    <textarea id="plano_pagamento" name="plano_pagamento"></textarea>

    <label for="observacoes">Observações:</label>
    <textarea id="observacoes" name="observacoes"></textarea>

    <h3>Processo</h3>
    <label for="acao">Ação:</label>
    <input type="text" id="acao" name="acao">

    <label for="numero_processo">Número do Processo:</label>
    <input type="text" id="numero_processo" name="numero_processo">

    <label for="data_protocolo">Data de Protocolo:</label>
    <input type="date" id="data_protocolo" name="data_protocolo">

    <label for="data_audiencia">Data da Audiencia:</label>
    <input type="datetime-local" id="data_audiencia" name="data_audiencia">

    <label for="data_transito_julgado">Data do Trânsito em Julgado:</label>
    <input type="date" id="data_transito_julgado" name="data_transito_julgado">

    <label for="vara">Vara:</label>
    <input type="text" id="vara" name="vara">

    <label for="data_contestacao">Data da Contestação:</label>
    <input type="date" id="data_contestacao" name="data_contestacao">

    <label for="data_alegacoes">Data das Alegações Finais:</label>
    <input type="date" id="data_alegacoes" name="data_alegacoes">

    <label for="data_recurso">Data do Recurso:</label>
    <input type="date" id="data_recurso" name="data_recurso">

    <label for="data_sentenca">Data da Sentença:</label>
    <input type="date" id="data_sentenca" name="data_sentenca">

        <button type="submit" class="btn-success">Enviar Cadastro</button>
    </form>
</fieldset>

<div class="action-buttons">
    <form action="/">
        <button type="submit" class="btn-secondary">Cancelar</button>
    </form>
</div>

{{>partials/footer}}