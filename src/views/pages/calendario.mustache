{{>partials/header}}

<h2>Calendário - {{month}} de {{year}}</h2>

<div class="nav-buttons">
    <form method="GET" action="/calendario">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <input type="hidden" name="menos" value="true">
        <button type="submit">« Anterior</button>
    </form>
    
    <form method="GET" action="/calendario">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <input type="hidden" name="mais" value="true">
        <button type="submit">Próximo »</button>
    </form>

    <form method="GET" action="/calendario">
        <input type="number" name="month_dateNum" placeholder="Mês (1-12)" onchange="this.form.submit()">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <button type="submit">Ir para mês</button>
    </form>
    <form method="GET" action="/calendario">
        <input type="number" name="year_dateNum"  onchange="this.form.submit()">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <button type="submit">Ir para Ano</button>
    </form>
</div>

<div class="calendario-container">

    <section>
        <h3>Pagamentos</h3>
        <ul>
            {{#clientes}}
                {{#dia_pagamento}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Dia: {{dia_pagamento}}</li>
                {{/dia_pagamento}}
            {{/clientes}}
        </ul>
    </section>

    <hr>

    <section>
        <h3>Audiências</h3>
        <ul>
            {{#clientes}}
                {{#dia_audiencia}}
                <li>
                    <strong>{{nome_completo}} ({{numero_processo}})</strong> - 
                    Dia: {{dia_audiencia}} | Horário: {{hora_audiencia}}:{{minuto_audiencia}}
                </li>
                {{/dia_audiencia}}
            {{/clientes}}
        </ul>
    </section>

    <hr>

    <section>
        <h3>Protocolos</h3>
        <ul>
            {{#clientes}}
                {{#dia_protocolo}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Dia: {{dia_protocolo}}</li>
                {{/dia_protocolo}}
            {{/clientes}}
        </ul>
    </section>

    <hr>

    <section>
        <h3>Prazos e Sentenças</h3>
        <ul>
            {{#clientes}}
                {{#dia_contestacao}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Contestação: {{dia_contestacao}}</li>
                {{/dia_contestacao}}
                
                {{#dia_alegacoes}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Alegações: {{dia_alegacoes}}</li>
                {{/dia_alegacoes}}
                
                {{#dia_recurso}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Recurso: {{dia_recurso}}</li>
                {{/dia_recurso}}

                {{#dia_sentenca}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Sentença: {{dia_sentenca}}</li>
                {{/dia_sentenca}}

                {{#dia_transito}}
                <li><strong>{{nome_completo}} ({{numero_processo}})</strong> - Trânsito em Julgado: {{dia_transito}}</li>
                {{/dia_transito}}

    
            {{/clientes}}
        </ul>
    </section>

    <section>
        <h3>Reuniões</h3>
        <ul>
            {{#clientes}}
                {{#dia_meeting}}
                <li>
                    <strong>{{name_meeting}}</strong> - Dia: {{dia_meeting}} | Horário: {{hora_meeting}}:{{minuto_meeting}} {{semana_meeting}}
                    {{#link_meeting}}
                    <a href="{{link_meeting}}" target="_blank" rel="noopener noreferrer">
                        <button type="button">Ir Para Reunião</button>
                    </a>
                    {{/link_meeting}}
                    <a href="/configreuniao/{{id}}">
                        <button type="button">Configurações</button>
                    </a>
                </li>
                {{/dia_meeting}}
            {{/clientes}}
        </ul>
    </section>
    

</div>

<div class="action-buttons">
    <a href="/">
        <button type="button" class="btn-secondary">Voltar</button>
    </a>
</div>

{{>partials/footer}}