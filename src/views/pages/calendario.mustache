        {{#dia_pagamento}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - 
        Pagamento Dia: {{dia_pagamento}}
        {{/dia_pagamento}}

        {{#dia_audiencia}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> -
        Audiencia Dia: {{dia_audiencia}} Horario:{{hora_audiencia}}:{{minuto_audiencia}}
        {{/dia_audiencia}}

        {{#dia_protocolo}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Protocolo Dia: {{dia_protocolo}}
        {{/dia_protocolo}}

        {{#dia_contestacao}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Contestação Dia: {{dia_contestacao}}
        {{/dia_contestacao}}

        {{#dia_alegacoes}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Alegações Dia: {{dia_alegacoes}}
        {{/dia_alegacoes}}

        {{#dia_recurso}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Recurso Dia: {{dia_recurso}}
        {{/dia_recurso}}

        {{#dia_sentenca}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Sentença Dia: {{dia_sentenca}}
        {{/dia_sentenca}}

        {{#dia_transito}}
        <strong>{{nome_completo}} {{numero_processo}}</strong> - Sentença Dia: {{dia_transito}}
        {{/dia_transito}}

            </li>
        {{/clientes}}
        </ul>

<div>
    <form method="GET" action="/calendario">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <input type="hidden" name="menos" value="true">
        <button type="submit">Anterior</button>
    </form>
    
    <form method="GET" action="/calendario">
        <input type="hidden" name="year" value={{year}}>
        <input type="hidden" name="numMonth" value={{numMonth}}>
        <input type="hidden" name="mais" value="true">
        <button type="submit">Próximo</button>
    </form>
</div>

