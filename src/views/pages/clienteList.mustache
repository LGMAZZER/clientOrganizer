{{>partials/header}}

<h2>Lista de Clientes</h2>

<div class="search-box">
    <fieldset>
        <form method="GET">
            <input type="text" id="buscar" name="buscar" placeholder="Buscar cliente...">
            <button type="submit">Buscar</button> 
        </form>
    </fieldset>
</div>

<ul>
    {{#users}}
    <li>
        <span><strong>Nome:</strong> {{nome_completo}}</span>
        {{#numero_processo}}
            <span>Nº Processo: {{numero_processo}}</span>
            <a href="/clienteaddprocesso/{{id}}">
                <button type="button">Novo Processo</button>
            </a>
        {{/numero_processo}}

        {{^numero_processo}}
            <span>Processo não cadastrado</span>
            <a href="/editarprocesso/{{id}}">
                <button type="button">Cadastrar Processo</button>
            </a>
        {{/numero_processo}}
        
        <a href="/cliente/{{id}}">
            <button type="button">Ver Detalhes</button>
        </a>
    </li>
    {{/users}}
</ul>

<p>Página {{page}}</p>

<div class="pagination">
    <form method="GET" action="/vizualizarclientes">
        <input type="hidden" id="offset" name="offset" value="{{offset}}">
        <input type="hidden" id="page" name="page" value="{{page}}">
        <input type="hidden" id="menos" name="menos" value="true">
        <button type="submit">« Anterior</button>
    </form>
    
    <form method="GET" action="/vizualizarclientes">
        <input type="hidden" id="offset" name="offset" value="{{offset}}">
        <input type="hidden" id="page" name="page" value="{{page}}">
        <input type="hidden" id="mais" name="mais" value="true">
        <button type="submit">Próxima »</button>
    </form>
</div>

<div class="action-buttons">
    <form action="/">
        <button type="submit" class="btn-secondary">Voltar</button>
    </form>
</div>

{{>partials/footer}}