{{>partials/header}}
<h2>Editar Cliente: {{nome_completo}}</h2>
<hr/>
<fieldset>
    <form method="POST" action="/clienteeditado/{{id}}">
        
    <label for="nome_completo">Nome Completo:</label>
    <input type="text" id="nome_completo" name="nome_completo" value="{{nome_completo}}" required>

    <label for="data_nascimento">Data de Nascimento:</label>
    <input type="date" id="data_nascimento" name="data_nascimento" value="{{data_nascimento}}">

    <label for="estado_civil">Estado Civil:</label>
    <input type="text" id="estado_civil" name="estado_civil" value="{{estado_civil}}">

    <label for="naturalidade">Naturalidade:</label>
    <input type="text" id="naturalidade" name="naturalidade" value="{{naturalidade}}">

    <label for="cpf">CPF:</label>
    <input type="text" id="cpf" name="cpf" value="{{cpf}}">

    <label for="rg">RG:</label>
    <input type="text" id="rg" name="rg" value="{{rg}}">

    <label for="telefone_contato">Telefone de Contato:</label>
    <input type="tel" id="telefone_contato" name="telefone_contato" value="{{telefone_contato}}">

    <label for="endereco_residencial">Endereço Residencial Completo:</label>
    <textarea id="endereco_residencial" name="endereco_residencial">{{endereco_residencial}}</textarea>

    <label for="email">E-mail:</label>
    <input type="email" id="email" name="email" value="{{email}}">

    <label for="profissao">Profissão:</label>
    <input type="text" id="profissao" name="profissao" value="{{profissao}}">

    <label for="nome_conjuge">Nome do Companheiro/Cônjuge:</label>
    <input type="text" id="nome_conjuge" name="nome_conjuge" value="{{nome_conjuge}}">

    <label for="profissao_conjuge">Profissão do Cônjuge:</label>
    <input type="text" id="profissao_conjuge" name="profissao_conjuge" value="{{profissao_conjuge}}">

    <label for="numero_filhos">Número de Filhos:</label>
    <input type="number" id="numero_filhos" name="numero_filhos" value="{{numero_filhos}}">

    <label for="idade_filhos">Idade dos Filhos:</label>
    <input type="text" id="idade_filhos" name="idade_filhos" value="{{idade_filhos}}">

    <label for="empresa_trabalho">Empresa ou Local de Trabalho:</label>
    <input type="text" id="empresa_trabalho" name="empresa_trabalho" value="{{empresa_trabalho}}">

    <label for="endereco_comercial">Endereço Comercial:</label>
    <textarea id="endereco_comercial" name="endereco_comercial">{{endereco_comercial}}</textarea>

    <label for="telefone_comercial">Telefone de Contato (Comercial):</label>
    <input type="tel" id="telefone_comercial" name="telefone_comercial" value="{{telefone_comercial}}">


    
        <button type="submit">Salvar Alterações</button>
    </form>
</fieldset>
<hr/>
<form action="/cliente/{{id}}">
    <button type="submit">Cancelar</button>
</form>
{{>partials/footer}}